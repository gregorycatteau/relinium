{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://github.com/gregorycatteau/relinium/schemas/document_v1.1.json",
  "title": "Relinium Document Schema v1.1",
  "description": "Schéma JSON pour la validation des frontmatters Relinium SSOT v1.1. Rétrocompatible avec v1.0.",
  "type": "object",
  "required": ["id", "type", "status", "date"],
  "properties": {
    "id": {
      "type": "string",
      "pattern": "^(ADR|RFC|OBS|POC|SPRINT_DOC)-\\d{4}(-v\\d+)?$",
      "description": "Identifiant unique du document (TYPE-NNNN ou TYPE-NNNN-vX pour successions)"
    },
    "type": {
      "type": "string",
      "enum": ["ADR", "RFC", "OBS", "POC", "SPRINT_DOC"],
      "description": "Type de document définissant son cycle de vie"
    },
    "status": {
      "type": "string",
      "description": "Statut actuel du document (les valeurs valides dépendent du type)"
    },
    "date": {
      "type": "string",
      "format": "date",
      "pattern": "^\\d{4}-\\d{2}-\\d{2}$",
      "description": "Date de création du document (ISO 8601: YYYY-MM-DD)"
    },
    "author": {
      "type": "string",
      "description": "Auteur principal ou équipe responsable (RECOMMENDED)"
    },
    "version": {
      "type": "string",
      "pattern": "^\\d+\\.\\d+(\\.\\d+)?$",
      "description": "Version du document suivant SemVer simplifié (RECOMMENDED)"
    },
    "tags": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "description": "Tags de classification thématique (OPTIONAL)"
    },
    "links": {
      "type": "object",
      "properties": {
        "cites": {
          "type": "array",
          "items": {
            "type": "string",
            "pattern": "^(ADR|RFC|OBS|POC|SPRINT_DOC)-\\d{4}(-v\\d+)?$"
          },
          "description": "Documents cités par ce document"
        },
        "cited_by": {
          "type": "array",
          "items": {
            "type": "string",
            "pattern": "^(ADR|RFC|OBS|POC|SPRINT_DOC)-\\d{4}(-v\\d+)?$"
          },
          "description": "Documents qui citent ce document (généré automatiquement)"
        },
        "supersedes": {
          "type": "string",
          "pattern": "^(ADR|RFC|OBS|POC|SPRINT_DOC)-\\d{4}(-v\\d+)?$",
          "description": "Document que ce document remplace (v1.1)"
        },
        "superseded_by": {
          "type": "string",
          "pattern": "^(ADR|RFC|OBS|POC|SPRINT_DOC)-\\d{4}(-v\\d+)?$",
          "description": "Document qui remplace ce document (v1.1)"
        }
      },
      "description": "Relations inter-documents (OPTIONAL)"
    },
    "previous_hash": {
      "type": "string",
      "pattern": "^sha256:[a-f0-9]{64}$",
      "description": "Hash SHA256 du document précédent (REQUIS si links.supersedes présent) - v1.1"
    },
    "id_root": {
      "type": "string",
      "pattern": "^(ADR|RFC|OBS|POC|SPRINT_DOC)-\\d{4}$",
      "description": "Identifiant stable de la lignée documentaire (RECOMMENDED) - v1.1"
    },
    "roles": {
      "type": "object",
      "properties": {
        "author": {
          "type": "array",
          "items": {
            "type": "object",
            "required": ["name"],
            "properties": {
              "name": {
                "type": "string"
              },
              "email": {
                "type": "string",
                "format": "email"
              }
            }
          },
          "description": "Auteur(s) principal(aux)"
        },
        "reviewers": {
          "type": "array",
          "items": {
            "type": "object",
            "required": ["name"],
            "properties": {
              "name": {
                "type": "string"
              },
              "reviewed_at": {
                "type": "string",
                "format": "date"
              }
            }
          },
          "description": "Relecteurs techniques"
        },
        "guardian": {
          "type": "object",
          "required": ["name"],
          "properties": {
            "name": {
              "type": "string"
            }
          },
          "description": "Gardien de cohérence architecturale (unique)"
        },
        "approved_by": {
          "type": "array",
          "items": {
            "type": "object",
            "required": ["name"],
            "properties": {
              "name": {
                "type": "string"
              },
              "approved_at": {
                "type": "string",
                "format": "date"
              }
            }
          },
          "description": "Validateurs formels"
        }
      },
      "description": "Rôles multiples pour gouvernance collaborative (OPTIONAL) - v1.1"
    },
    "decision_type": {
      "type": "string",
      "enum": [
        "accepted",
        "accepted_conditional",
        "experimental",
        "rejected",
        "superseded",
        "deprecated"
      ],
      "description": "Nature de la décision pour les ADR (OPTIONAL) - v1.1"
    },
    "scope": {
      "type": "string",
      "enum": ["technical", "organizational", "ethical", "spiritual", "mixed"],
      "description": "Domaine d'application du document (OPTIONAL) - v1.1"
    },
    "pattern": {
      "type": "string",
      "enum": ["decision", "reflection", "observation", "experiment", "rule"],
      "description": "Intent métier du document (OPTIONAL) - v1.1"
    }
  },
  "allOf": [
    {
      "if": {
        "properties": {
          "links": {
            "type": "object",
            "required": ["supersedes"]
          }
        }
      },
      "then": {
        "required": ["previous_hash"],
        "properties": {
          "previous_hash": {
            "type": "string"
          }
        }
      }
    }
  ],
  "additionalProperties": true,
  "metadata": {
    "schema_version": "1.1.0",
    "schema_date": "2025-11-05",
    "supersedes_schema": "1.0.0",
    "backward_compatible": true,
    "related_documents": [
      "RFC-004",
      "OBS-SCHEMA-0001",
      "OBS-GOVERNANCE-0001"
    ]
  }
}
